             d:DesignWidth="1000"
             Focusable="True"
             Loaded="UserControl_Loaded"
             PreviewKeyDown="UserControl_PreviewKeyDown">
    <UserControl.Resources>
        <Color x:Key="color1">#B21D1D</Color>
        <Color x:Key="color2">#38B02E</Color>
        <SolidColorBrush Color="#B21D1D"
                         x:Key="Colorpanel"></SolidColorBrush>
        <Style TargetType="Border"
               x:Key="colorDeFondoMandos">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,1"
                                         EndPoint="1 0">
                        <GradientStop Color="{StaticResource color2}"
                                      Offset="0.45" />
                        <GradientStop Color="#2F3033"
                                      Offset="0.45" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Jugador.Escenario}"
                             Value="2">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,1"
                                                 EndPoint="1 0">
                                <GradientStop Color="{StaticResource color1}"
                                              Offset="0.45" />
                                <GradientStop Color="#2F3033"
                                              Offset="0.45" />
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
