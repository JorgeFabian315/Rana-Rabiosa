<UserControl x:Class="Juego_PA.Views.PantallaNivelesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ico="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:Juego_PA.Views"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000">
    <Grid Background="GhostWhite">
        <Image Source="/Assets/hola13.jpg"
               Stretch="Fill" />
        <Border Background="Black"
                Opacity=".3" />
        <Image Source="/Assets/flor.png"
               Width="175"
               Margin="757,240,-132,-240" />
        <StackPanel  VerticalAlignment="Center">
            <TextBlock Text="Selecciona el nivel"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"
                       FontSize="40"
                       FontFamily="MV Boli"
                       FontWeight="SemiBold"
                       Foreground="#fff" />
            <WrapPanel Margin="15"
                       HorizontalAlignment="Center">
                <WrapPanel.Resources>
                    <Style TargetType="Button"
                           x:Key="BotonDesbloqueado">
                        <Setter Property="Width"
                                Value="100" />
                        <Setter Property="Background"
                                Value="#63DF41" />
                        <Setter Property="Cursor"
                                Value="Hand" />
                      
                        <Setter Property="Height"
                                Value="100" />
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="25" 
                                                  Opacity=".8"/>
                            </Setter.Value>
                        </Setter>

                        <Setter Property="Foreground"
                                Value="White" />
                        <Setter Property="Margin"
                                Value="15 0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate  TargetType="Button">
                                    <Grid>
                                        <Border CornerRadius="5"
                                                Margin="5"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                         To="120"
                                                         Duration="0:0:0.3" />
                                        <DoubleAnimation Storyboard.TargetProperty="Height"
                                                         To="120"
                                                         Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                         To="100"
                                                         Duration="0:0:0.3" />
                                        <DoubleAnimation Storyboard.TargetProperty="Height"
                                                         To="100"
                                                         Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="Button"
                           x:Key="BotonBloqueado">
                        <Setter Property="Width"
                                Value="100" />
                        <Setter Property="Background"
                                Value="#383838" />
                        <Setter Property="Height"
                                Value="100" />
                        <Setter Property="Foreground"
                                Value="White" />
                        <Setter Property="Margin"
                                Value="15 0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate  TargetType="Button">
                                    <Grid>
                                        <Border CornerRadius="5"
                                                Margin="5"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center" />
                                        </Border>
                                        <Border Background="#1C1C1C"
                                                Width="30"
                                                CornerRadius="5"
                                                Height="30"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right">
                                            <ico:ImageAwesome Icon="Lock"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              Margin="5"
                                                              Foreground="#fff" />
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </WrapPanel.Resources>
                <Button Content="Nivel 1"
                        Style="{StaticResource BotonDesbloqueado}"
                        Command="{Binding CambiarVistaCommand}"
                        CommandParameter="{x:Static local:Vista.Tutorial}"
                        FontFamily="Monotype Corsiva"
                        FontSize="20" />
                <Button Content="Nivel 2"
                        Style="{StaticResource BotonDesbloqueado}"
                        Command="{Binding CambiarVistaCommand}"
                        CommandParameter="{x:Static local:Vista.Tutorial2}"
                        FontFamily="Monotype Corsiva"
                        FontSize="20" />
                <Button Content="Nivel 3"
                        Style="{StaticResource BotonBloqueado}"
                        FontFamily="Monotype Corsiva"
                        FontSize="20" />
                <Button Content="Nivel 4"
                        Style="{StaticResource BotonBloqueado}"
                        FontFamily="Monotype Corsiva"
                        FontSize="20" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
